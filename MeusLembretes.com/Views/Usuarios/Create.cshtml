@model MeusLembretes.com.Models.Usuario

@{
    ViewBag.Title = "Create";
    { Layout = null; }
}
<link rel="stylesheet" href="~/Content/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/formulario.css">

<body id="centralcontent">
    <div class="form-container">
        @using (Html.BeginForm("Create", "Usuarios"))
        {
            @Html.AntiForgeryToken()
            <div class="page-header">
                <h1>Cadastro</h1>
            </div>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Informações</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group col-md-8">
                            @Html.Label("Nome Usuario", htmlAttributes: new { @class = "label-control" })
                            @Html.EditorFor(mo => mo.UsuarioNome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UsuarioNome, "", new { @class = "text-info" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            @Html.Label("Email Usuario", htmlAttributes: new { @class = "label-control" })
                            @Html.EditorFor(mo => mo.Email, new { htmlAttributes = new { @class = "form-control email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-info" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.Label("Telefone", htmlAttributes: new { @class = "label-control" })
                            @Html.EditorFor(mo => mo.Telefone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-info" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            @Html.Label("Rua", htmlAttributes: new { @class = "label-control" })
                            @Html.EditorFor(mo => mo.Email, new { htmlAttributes = new { @class = "form-control email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-info" })
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Bairro", htmlAttributes: new { @class = "label-control" })
                            @Html.EditorFor(mo => mo.Telefone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-info" })
                        </div>
                        <div class="form-group col-md-2">
                            @Html.Label("Estado", htmlAttributes: new { @class = "label-control" })
                            @Html.EditorFor(mo => mo.Telefone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-info" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-3">
                            @Html.Label("Senha", htmlAttributes: new { @class = "label-control" })
                            @Html.EditorFor(mo => mo.Senha, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-info" })
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("Confirmação Senha", htmlAttributes: new { @class = "label-control" })
                            @Html.EditorFor(mo => mo.Telefone, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-info" })
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <input type="submit" value="Cadastrar" class="btn btn-success">
                    @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-info" })
                </div>
            </div>
        }
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
